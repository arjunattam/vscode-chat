{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",

    /* Strict Type-Checking Option */
    "strict": true,
    /* Added to compile vsls contact protocol */
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*", "node_modules/vsls/vscode.ts"],
  "exclude": ["node_modules", ".vscode-test", "out/**", "oauth-service"]
}
